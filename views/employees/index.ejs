<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Employee</title>
</head>
<body>
<%- include('../partials/_navbar.ejs') %>
    <div class="employee-container">
    <h1>Here's all the employees</h1>
        <a href="/employees/new">Add a new Employee</a>
        <div class="employee-list">
            <ul>
                <% employees.forEach((employee) => { %>
                    <li>
                        Employee:<a href="/employees/<%= employee._id %>/records"> <%= employee.name %> ID: <%= employee.id %></a>
                        <a href="/employees/<%= employee._id %>">View more details</a>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
</body>